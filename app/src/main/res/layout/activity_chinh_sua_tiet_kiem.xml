<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.quanlychitieu.ChinhSuaTietKiemActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTieuChi"
        android:hint="Tên"
        android:inputType="textLongMessage"
        android:paddingLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mục tiêu"
        android:paddingLeft="5dp"
        android:textSize="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMucTieu"
        android:hint="Số tiền"
        android:paddingLeft="5dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/txtLoaiTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Chọn loại tiền"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtTienBanDau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền"
        android:paddingLeft="5dp"
        android:inputType="numberDecimal"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền còn lại:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtsotienconlai"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc"
            android:id="@+id/txtNgayKetThuc"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNgayConLai"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="24dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="24dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</LinearLayout>
